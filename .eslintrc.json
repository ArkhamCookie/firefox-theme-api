{
	"env": {
		"browser": true,
		"es6": true,
		"webextensions": true
	},
  "root": true,
  "extends": ["eslint:recommended", "standard"],
  "rules": {
    "indent": ["warn", "tab"],
    "no-tabs": "off",
    "no-unused-vars": ["warn", { "vars": "local", "args": "none"}],
		"prefer-const": "warn",
		"space-before-function-paren": ["error", "never"]
  }
}
